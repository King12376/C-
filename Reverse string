#include <string>
#include <iostream>
using namespace std;

string reverse(string s, int n)
{
    string rev="";
    /*for(int j=s.length()-1; j>=0; j--){
        cout<<s[j];
    }*/
    while(n<=s.length())
    {
        for(int i=s.length()-1; i>=0; i--)
        {
            //concatenate characters to the reverse
            rev = rev + s[i];
        }
        break;
    }
    //cout<<rev;
  return rev;
}
